<h1>Edit Book details</h1>
<%= form_for @book, :url=>{:action=>'update', :id=>@book} do |f| %>

<p>Title:<%= f.text_field 'title' %></p>
<p>Price:<%= f.text_field 'price' %></p>
<p>Subject:<%= collection_select(:subject, :subject_id, Subject.all, :id, :name, prompt: true) %></p>
<p>Description:<%= f.text_area 'description' %></p>
<p><%= f.submit "submit changes" %></p>

<%end%>
<hr>
