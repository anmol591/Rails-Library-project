
<ul id="subjects">
<% Subject.all.each do |c| %>
<li><%= link_to c.name, :action => "show_subjects", :id=>c.id %></li>
<% end %>
</ul>
<% if @books.blank? %>
<p>There are no any books currently in the system</p>
<% else %>
<p>current books in our system</p>

<ul id="books">
<% @books.each do |c| %>
<li><%= link_to c.title, :action => "show", :id=>c.id %></li> <!---may be error-->
<b><%= link_to "Edit", :action => "edit", :id=>c.id %></b>
<b><%= link_to "Delete", :action => "delete", :id=>c.id, :confirm=>"Are you sure you want to delete this item?" %></b>
<% end %>
</ul>
<%end%>
<hr>
<p><%= link_to "Add new book", :action => "new" %></p>
